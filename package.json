{
  "name": "julius-gpt",
  "version": "0.0.14",
  "description": "Node.js API & CLI for generating  blog posts, product descriptions and many other type of content based on powerfull prompts & ChatGPT API",
  "author": "Lombart Christophe <christophe.lombart@gmail.com >",
  "repository": "https://github.com/christophebe/julius-gpt",
  "license": "MIT",
  "type": "module",
  "source": "./src/index.ts",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "types": "./build/index.d.ts",
      "default": "./build/index.js"
    }
  },
  "files": [
    "build",
    "bin"
  ],
  "bin": {
    "julius": "./bin/cli-exec.js"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsup",
    "clean": "del build",
    "prebuild": "run-s clean",
    "pretest": "run-s build",
    "prestart": "run-s build",
    "test": "ava",
    "test:debug": "ava --inspect-brk ./tests/**/*.spec.ts",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix"
  },
  "dependencies": {
    "@dqbd/tiktoken": "^1.0.3",
    "@types/axios": "^0.14.0",
    "@types/inquirer": "^9.0.3",
    "@types/marked": "^4.0.8",
    "axios": "^1.3.4",
    "chatgpt": "^5.2.2",
    "commander": "^10.0.0",
    "dotenv": "^16.0.3",
    "inquirer": "^9.1.5",
    "inquirer-autocomplete-prompt": "^3.0.0",
    "inquirer-file-tree-selection-prompt": "^2.0.5",
    "json5": "^2.2.3",
    "jsonschema": "^1.4.1",
    "marked": "^4.3.0",
    "ora": "^6.3.0",
    "p-retry": "^5.1.2"
  },
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/dotenv-safe": "^8.1.2",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "ava": "^5.2.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.37.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^6.7.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.3"
  },
  "ava": {
    "files": [
      "tests/**/*.spec.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node",
      "--no-warnings"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "openai",
    "chatgpt",
    "chat",
    "gpt",
    "gpt-3",
    "gpt3",
    "gpt4",
    "machine learning",
    "conversation",
    "conversational ai",
    "ai",
    "ml",
    "ai write articles",
    "ai prompts",
    "generate blog posts",
    "generate content"
  ]
}
