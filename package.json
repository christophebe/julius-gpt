{
  "name": "julius-gpt",
  "version": "0.1.0",
  "description": "Node.js API & CLI for generating  blog posts, product descriptions and many other type of content based on powerfull prompts & ChatGPT API",
  "author": "Lombart Christophe <christophe.lombart@gmail.com >",
  "repository": "https://github.com/christophebe/julius-gpt",
  "license": "MIT",
  "type": "module",
  "source": "./src/index.ts",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "types": "./build/index.d.ts",
      "default": "./build/index.js"
    }
  },
  "files": [
    "build",
    "bin"
  ],
  "bin": {
    "julius": "./bin/cli-exec.js"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "copy-templates": "copyfiles -u 1 \"./templates/**/*\" ./build/templates",
    "build": "tsup && npm run copy-templates",
    "clean": "del build",
    "prebuild": "run-s clean",
    "pretest": "run-s build",
    "prestart": "run-s build",
    "test": "jest",
    "test:debug": "jest --inspect-brk ./tests/**/*.spec.ts",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix"
  },
  "dependencies": {
    "@dqbd/tiktoken": "^1.0.7",
    "@langchain/community": "^0.0.15",
    "@langchain/core": "^0.1.10",
    "@langchain/openai": "^0.0.9",
    "@types/inquirer": "^9.0.7",
    "@types/marked": "^6.0.0",
    "axios": "^1.6.3",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "inquirer": "^9.2.12",
    "inquirer-autocomplete-prompt": "^3.0.1",
    "inquirer-file-tree-selection-prompt": "^2.0.5",
    "json5": "^2.2.3",
    "jsonschema": "^1.4.1",
    "langchain": "^0.0.213",
    "marked": "^11.1.1",
    "midjourney": "^4.3.13",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.44",
    "p-retry": "^6.2.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/dotenv-safe": "^8.1.5",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "openai",
    "chatgpt",
    "chat",
    "gpt",
    "gpt-3",
    "gpt3",
    "gpt4",
    "machine learning",
    "conversation",
    "conversational ai",
    "ai",
    "ml",
    "ai write articles",
    "ai prompts",
    "generate blog posts",
    "generate content"
  ]
}
