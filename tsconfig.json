{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ESNext",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",    
    "outDir": "build",

  },
  "exclude": ["node_modules", "build"],
  "include": [
    "src/**/*.ts",
    "test/**/*.spec.ts"]
}
